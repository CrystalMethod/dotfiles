{{- $packages := splitList " " (includeTemplate "universal/common-packages" .) }}

{{- $javaPackages := list
"ca-certificates-java"
-}}

{{- if .toolchains.java }}
{{- $packages = concat $packages $javaPackages -}}
{{- end}}

{{- $azurePackages := list
"azure-cli"
-}}

{{- if .toolchains.azure }}
{{- $packages = concat $packages $azurePackages -}}
{{- end}}

{{- $packages | sortAlpha | join " " -}}
