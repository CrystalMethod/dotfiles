{{- /* Checks if running interactively, which is not the case for GitHub Codespaces */ -}}
{{- $interactive := stdinIsATTY                                                        -}}

{{- $username := ""                                                                    -}}
{{- if hasKey . "username"                                                             -}}
{{-   $username = .username                                                            -}}
{{- else                                                                               -}}
{{-   $username = .chezmoi.username | printf "username [%s]" | promptString            -}}
{{-   if eq $username ""                                                               -}}
{{-     $username = .chezmoi.username                                                  -}}
{{-   end                                                                              -}}
{{- end                                                                                -}}

{{- $email := ""                                                                       -}}
{{- if hasKey . "email"                                                                -}}
{{-   $email = .email                                                                  -}}
{{- else                                                                               -}}
{{-   $email = $username | printf "email [%s@smb-tec.com]" | promptString              -}}
{{-   if eq $email ""                                                                  -}}
{{-     $email = $username | printf "email [%s@smb-tec.com]" | promptString            -}}
{{-   end                                                                              -}}
{{- end                                                                                -}}

{{- $fullname := ""                                                                    -}}
{{- if hasKey . "fullname"                                                             -}}
{{-   $fullname = .fullname                                                            -}}
{{- else                                                                               -}}
{{-   $fullname = expandenv "full name [$CHEZMOI_FULLNAME]" | printf | promptString    -}}
{{-   if eq $fullname ""                                                               -}}
{{-     $fullname = env "CHEZMOI_FULLNAME"                                             -}}
{{-   end                                                                              -}}
{{- end                                                                                -}}
   
diff:
  exclude:
    - scripts
  format: git

data:
  username: {{ $username }}
  email: {{ $email }}
  fullname: {{ $fullname }}
